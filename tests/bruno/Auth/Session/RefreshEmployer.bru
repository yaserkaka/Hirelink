meta {
  name: RefreshEmployer
  type: http
  seq: 4
}

get {
  url: {{base_url}}/auth/refresh
  body: none
  auth: inherit
}

script:post-response {
  const token = res.body.data.token;

  bru.setEnvVar("employer_access_token", token);
  bru.setEnvVar("access_token", token);
}

settings {
  encodeUrl: true
  timeout: 0
}
