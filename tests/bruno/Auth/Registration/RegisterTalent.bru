meta {
  name: RegisterTalent
  type: http
  seq: 1
}

post {
  url: {{base_url}}/auth/register
  body: json
  auth: inherit
}

body:json {
  {
    "email": {{talent_email}},
    "password": {{password}},
    "role": "TALENT",
    "profileData": {
      "firstName": "sleeve",
      "lastName": "dipper"
    }
  }
}

script:post-response {
  const token = res.body?.data?.verificationToken;
  if (token) {
    bru.setEnvVar("verification_token", JSON.stringify(token));
  }
}

settings {
  encodeUrl: true
  timeout: 0
}
