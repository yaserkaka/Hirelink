meta {
  name: RegisterEmployer
  type: http
  seq: 2
}

post {
  url: {{base_url}}/auth/register
  body: json
  auth: inherit
}

body:json {
  {
    "email": {{employer_email}},
    "password": {{password}},
    "role": "EMPLOYER",
    "profileData": {
      "companyName": "HireLink Test Co"
    }
  }
}

script:post-response {
  const token = res.body?.data?.verificationToken;
  if (token) {
    bru.setEnvVar("verification_token", JSON.stringify(token));
  }
}

settings {
  encodeUrl: true
  timeout: 0
}
