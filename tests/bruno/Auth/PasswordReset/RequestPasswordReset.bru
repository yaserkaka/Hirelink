meta {
  name: RequestPasswordReset
  type: http
  seq: 7
}

post {
  url: {{base_url}}/auth/reset/request
  body: json
  auth: inherit
}

body:json {
  {
    "email": {{talent_email}}
  }
}

script:post-response {
  const token = res.body?.data?.resetToken;
  if (token) {
    bru.setEnvVar("reset_token", JSON.stringify(token));
  }
}

settings {
  encodeUrl: true
  timeout: 0
}
