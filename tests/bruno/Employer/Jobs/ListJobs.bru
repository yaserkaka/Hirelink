meta {
  name: ListJobs
  type: http
  seq: 4
}

get {
  url: {{base_url}}/employer/jobs
  body: none
  auth: inherit
}

headers {
  Authorization: Bearer {{employer_access_token}}
}

script:post-response {
  const firstId = res.body?.data?.[0]?.id;
  if (firstId) {
    bru.setEnvVar("job_id", firstId);
  }
}

settings {
  encodeUrl: true
  timeout: 0
}
