{
	"name": "hirelink",
	"version": "1.2.0",
	"type": "module",
	"description": "HireLink backend API",
	"main": "src/server.js",
	"engines": {
		"node": ">=24.0.0"
	},
	"scripts": {
		"dev": "node --experimental-strip-types --env-file=.env --watch src/server.js",
		"start": "node --experimental-strip-types src/server.js",
		"start:env": "node --experimental-strip-types --env-file=.env.production src/server.js",
		"postinstall": "npm run prisma:generate",
		"pretest": "npm run prisma:generate",
		"test": "vitest run",
		"test:watch": "vitest",
		"format": "biome format --write .",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"prisma": "node --env-file=.env ./node_modules/.bin/prisma",
		"prisma:generate": "npm run prisma -- generate",
		"prisma:migrate": "npm run prisma -- migrate",
		"prisma:studio": "npm run prisma -- studio",
		"prisma:seed": "npm run prisma -- db seed"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.7",
		"pino-pretty": "^13.1.2",
		"prisma": "^7.2.0",
		"supertest": "^7.1.4",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@prisma/adapter-pg": "7.0.1",
		"@prisma/client": "^7.2.0",
		"bcrypt": "^6.0.0",
		"chalk": "^5.6.2",
		"cloudinary": "^1.41.3",
		"compression": "^1.8.1",
		"connect-timeout": "^1.9.1",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"ejs": "^3.1.10",
		"express": "^5.1.0",
		"express-rate-limit": "^8.2.1",
		"helmet": "^8.1.0",
		"hpp": "^0.2.3",
		"jsonwebtoken": "^9.0.2",
		"morgan": "^1.10.1",
		"multer": "^2.0.2",
		"multer-storage-cloudinary": "^4.0.0",
		"nodemailer": "^7.0.11",
		"pg": "^8.12.0",
		"pino": "^10.1.0",
		"ulid": "^3.0.1",
		"zod": "^4.1.13"
	},
	"prisma": {
		"seed": "node --experimental-strip-types prisma/seed.js"
	}
}
